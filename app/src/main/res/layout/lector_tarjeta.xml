<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LectorTarjeta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#042743"> <!--- #042743 -->

        <ImageView
            android:id="@+id/ivCabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bordenegro" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="serif"
            android:text="VERIFICACIÃ“N EN 2 PASOS"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvbt"
            android:layout_width="328dp"
            android:layout_height="78dp"
            android:fontFamily="serif"
            android:text="ACERCA LA TARJETA AL SCANNER"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_anchorGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.736" />

        <ImageView
            android:id="@+id/ivCuadroNegro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/black_square_png_images_hd" />

        <ImageView
            android:id="@+id/ivLineaNegra"
            android:layout_width="126dp"
            android:layout_height="49dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="580dp"
            android:rotation="90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toEndOf="@+id/ivCuadroNegro"
            app:layout_constraintStart_toStartOf="@+id/ivCuadroNegro"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
            app:srcCompat="@drawable/pngwing_com" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/GifNFT"
            android:layout_width="240dp"
            android:layout_height="206dp"
            android:src="@drawable/huella"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivCuadroNegro"
            app:layout_constraintStart_toStartOf="@+id/ivCuadroNegro"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivVerdeAprobado"
            android:layout_width="200dp"
            android:layout_height="429dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/cuadroverde" />

        <Button
            android:id="@+id/BTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Tarjeta"
            android:text="TARJETA"
            app:layout_constraintBottom_toBottomOf="@+id/ivCuadroNegro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivVerdeAprobado"
            app:layout_constraintVertical_bias="0.456" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>